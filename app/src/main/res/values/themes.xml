<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Funda" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/Accent</item>
        <item name="colorPrimaryDark" >@color/Accent</item>
       <!-- <item name="android:statusBarColor" tools:targetApi="l">@color/Accent</item> -->
        <item name="colorAccent">@color/Accent</item>

        <item name="android:windowAnimationStyle">
            @style/MyCustomActivityAnimation</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--bottom sheet-->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>
    <style name="Note.theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/Accent</item>
        <item name="colorPrimaryDark">@color/Accent</item>
        <item name="colorAccent">@color/Accent</item>
        <item name="android:windowAnimationStyle">
            @style/MyCustomActivityAnimation</item>
    </style>

    <style name="Theme.Funda" parent="Base.Theme.Funda" />
    <style name="Theme.Splash" parent="Base.Theme.Funda">
        <item name="colorPrimary">@color/Accent</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/Accent</item>
    </style>
    <style name="Theme.syllabus" parent="Base.Theme.Funda">
        <item name="colorPrimaryDark" >@color/white</item>
    </style>

    <style name="MyCustomActivityAnimation"
        parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/activity_fade_in_animation</item>
        <item name="android:activityOpenExitAnimation">
            @anim/activity_fade_out_animation</item>
        <item name="android:activityCloseEnterAnimation">
            @anim/activity_fade_in_animation</item>
        <item name="android:activityCloseExitAnimation">
            @anim/activity_fade_out_animation</item>
    </style>

    <!-- Search View Text  -->
    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <!-- <style name="SearchTheme" parent="Theme.AppCompat.Light">
        <item name="queryHint">@string/search_notes</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>-->


    <!-- BottomSheetStyle -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_shape</item>
    </style>
    <!-- BottomSheetDIALOGtheme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>